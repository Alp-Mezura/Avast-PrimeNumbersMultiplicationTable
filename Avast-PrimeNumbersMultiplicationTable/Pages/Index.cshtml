@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h3>PRIME NUMBERS MULTIPLICATION TABLE</h3>
</div>
<span>Enter @Model.NumberCount Integer Values</span>
<hr />
<form method="post">
    @for (int i = 0; i < Model.NumberCount; i++)
    {
        <input type="text" name="txtNumber_@i" value="" />
    }
    <button>Display Table</button>
</form>
<br />
<span>Multiplication Table</span>
<hr />
<table class="table table-bordered">
    <tr>
        <td></td>
        @foreach (int colHeader in Model.PrimeNumbers)
        {
            <td><b>@colHeader</b></td>
        }
    </tr>
    @for (int row = 0; row < Model.MultiplicationTable.GetLength(0); row++)
    {
        <tr>
            <td><b>@Model.PrimeNumbers[row]</b></td>
            @for (int col = 0; col < Model.MultiplicationTable.GetLength(1); col++)
            {
                <td>@Model.MultiplicationTable[row, col]</td>
            }
        </tr>
    }
</table>
